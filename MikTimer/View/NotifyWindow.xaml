<Window x:Class="MikTimer.View.NotifyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="100" Width="200"
        Title="It's time now."
        WindowStyle="ToolWindow" ResizeMode="NoResize"
        Background="#3E3E42" Topmost="True"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <TextBlock Text="{Binding Path=name}" Foreground="AliceBlue"
                       Margin="10,10,0,0" TextWrapping="Wrap"
                       HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </Grid>

        <Grid Grid.Row="1">
            <Button x:Name="button_OK" Content="OK"
                    Margin="0,0,10,10" Height="20" Width="75"
                    VerticalAlignment="Bottom" HorizontalAlignment="Right"
                    Background="AliceBlue"
                    Click="button_OK_Click"/>
        </Grid>
    </Grid>
</Window>
